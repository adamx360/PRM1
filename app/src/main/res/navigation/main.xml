<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.prm1.fragments.ListFragment"
        android:label="ListFragment">
        <action
            android:id="@+id/action_listFragment_to_formFragment"
            app:destination="@id/formFragment">
            <argument
                android:name="type"
                android:defaultValue="New" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/formFragment"
        android:name="com.example.prm1.fragments.FormFragment"
        android:label="fragment_form"
        tools:layout="@layout/fragment_form">
        <argument
            android:name="type"
            app:argType="com.example.prm1.model.FormType" />
        <action
            android:id="@+id/action_formFragment_to_paintFragment"
            app:destination="@id/paintFragment" />
    </fragment>
    <fragment
        android:id="@+id/paintFragment"
        android:name="com.example.prm1.fragments.PaintFragment"
        android:label="PaintFragment" >
        <action
            android:id="@+id/action_paintFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.prm1.fragments.SettingsFragment"
        android:label="SettingsFragment" />
</navigation>